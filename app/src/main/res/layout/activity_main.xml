<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/liteBlueSplash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:text="Bluetooth Devices"
            android:textColor="#677C4D"
            android:textStyle="bold"
            android:textSize="28dp" />
    </LinearLayout>
        <TextView
            android:id="@+id/text_devicesss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Select the one meter(1.5m) Range \n Distance"
            android:textColor="#B8613D"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:id="@+id/radioButton1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text=" Not In Range"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:background="@drawable/round_button_layout"/>
            <RadioButton
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_button_layout"
                android:id="@+id/radioButton2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text=" In Range"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>


        <ListView
            android:id="@+id/list_bluetooth_devices"
            android:background="@drawable/round_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</LinearLayout>